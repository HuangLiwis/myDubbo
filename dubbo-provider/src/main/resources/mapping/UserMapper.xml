<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaozhi.dao.UserDao">
    <resultMap id="userMap" type="com.xiaozhi.model.UserDo">
        <result column="uid" property="uid"/>
        <result column="uname" property="uname"/>
        <result column="upassword" property="upassword"/>
        <result column="createTime" property="createTime"/>
        <result column="modifyTime" property="modifyTime"/>
    </resultMap>

    <sql id="saveAllColumn">
        (uname,upassword,createTime,modifyTime)
    </sql>
    <sql id="getAllColumn">
        uid,uname,upassword,createTime,modifyTime
    </sql>

    <insert id="addUser">
        INSERT INTO user
        <include refid="saveAllColumn"/>
        VALUES (#{uname},#{upassword},#{createTime},#{modifyTime})
    </insert>


    <select id="findUser" resultMap="userMap">
        SELECT
         *
        FROM user
        WHERE 1=1
        <if test="uid != null">
            AND uid=#{uid}
        </if>
        <if test="uname!=null">
            AND uname=#{uname}
        </if>
        <if test="createTime !=null">
            AND createTime=#{createTime}
        </if>
        <if test="modifyTime!=null">
            AND modifyTime=#{modifyTime}
        </if>
    </select>


    <delete id="deleteUser">
        DELETE FROM user
        WHERE uid=#{uid}
        <if test="uname !=null">
            AND uname=#{uname}
        </if>
    </delete>


    <update id="updateUser">
        UPDATE user SET
        uname=#{uname},
        upassword=#{upassword}
        modifyTime=#{modifyTime}
        <where>
            uid=#{uid}
        </where>
    </update>
</mapper>